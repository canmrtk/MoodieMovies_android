<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E1F26">

    <!-- Üst Gri Kayıt Alanı -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#2A2A2E"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/mmv_logo"
            android:layout_marginTop="16dp"
            android:contentDescription="Logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MoodieMovies’e Kaydolun"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-posta *"
            android:textColorHint="#AAAAAA"
            android:textColor="#FFFFFF"
            android:background="@drawable/edittext_background"
            android:inputType="textEmailAddress"
            android:layout_marginTop="16dp"
            android:padding="12dp" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Şifre *"
            android:textColorHint="#AAAAAA"
            android:textColor="#FFFFFF"
            android:background="@drawable/edittext_background"
            android:inputType="textPassword"
            android:layout_marginTop="8dp"
            android:padding="12dp" />

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kullanıcı adı *"
            android:textColorHint="#AAAAAA"
            android:textColor="#FFFFFF"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="8dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="HESABI OLUŞTUR >"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/button_background_black"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bir hesap oluşturarak Hizmet Şartları’nı kabul etmiş olursunuz. MoodieMovies’in gizlilik uygulamaları hakkında daha fazla bilgi için MoodieMovies Gizlilik Beyanı’na bakın. Size ara sıra hesapla ilgili e-postalar göndereceğiz."
            android:textSize="11sp"
            android:textColor="#AAAAAA"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="12dp" />
    </LinearLayout>

    <!-- Alt Görsel Alan -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ücretsiz Hesabınızı Oluşturun"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/montserrat_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MoodieMovies’in temel özelliklerini keşfedin."
            android:textColor="#CCCCCC"
            android:textSize="13sp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/montserrat_regular" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/signup_poster_example"
            android:scaleType="centerCrop"
            android:background="#000000"
            android:contentDescription="Film Posterleri" />
    </LinearLayout>
</LinearLayout>
