<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E1F26">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1E1F26"
        android:titleTextColor="#FFFFFF"
        android:navigationIcon="@drawable/ic_arrow_back"
        android:title="Liste Detayı" />

    <ImageView
        android:id="@+id/listCoverImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:contentDescription="Liste Kapak Görseli"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/listNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:text="Liste Adı" />

    <TextView
        android:id="@+id/listDescText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Liste açıklaması buraya gelecek." />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filmler"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listFilmsRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="16dp"
        android:clipToPadding="false" />

</LinearLayout>
