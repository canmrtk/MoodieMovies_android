<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp" android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#2C2D35" app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivListCover"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/placeholder_list_cover" /> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvListName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Mutlaka Ä°zlemen Gereken Filmler"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/ivListUserAvatar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                tools:src="@drawable/placeholder_avatar"
                app:civ_border_width="1dp"
                app:civ_border_color="#50FFFFFF"/> <TextView
            android:id="@+id/tvListUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AEAEB2" android:textSize="12sp"
            android:layout_marginStart="8dp"
            tools:text="Arjean"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                 app:tint="#AEAEB2" />
            <TextView
                android:id="@+id/tvListFilmCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#AEAEB2"
                android:textSize="11sp"
                android:layout_marginStart="4dp"
                tools:text="3.1K"/>

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"

                android:layout_marginStart="12dp"
                app:tint="#AEAEB2" />
            <TextView
                android:id="@+id/tvListCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#AEAEB2"
                android:textSize="11sp"
                android:layout_marginStart="4dp"
                tools:text="8.0K"/> <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"

            android:layout_marginStart="12dp"
            app:tint="#AEAEB2" />
            <TextView
                android:id="@+id/tvListLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#AEAEB2"
                android:textSize="11sp"
                android:layout_marginStart="4dp"
                tools:text="-" /> </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>