<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_moddiemovies_logo"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MoodieMovies Üyeliğinizin Avantajları"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="10dp" />

        <!-- Avantajlar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="◆ Kişiselleştirilmiş Öneriler\n◆ İzleme Listeniz\n◆ Puanlarınız\n◆ MoodieMovies’e Katkıda Bulunun"
            android:textColor="#4ec9f7"
            android:textSize="15sp"
            android:layout_marginBottom="24dp"/>

        <!-- Kullanıcı Giriş başlığı -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kullanıcı Giriş"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginBottom="12dp"/>

        <!-- E-posta -->
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="E-posta"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_edittext"
            android:textColor="#fff"
            android:textColorHint="#aaaaaa"
            android:padding="12dp"
            android:layout_marginBottom="10dp"/>

        <!-- Şifre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Şifre"
                android:inputType="textPassword"
                android:background="@drawable/rounded_edittext"
                android:textColor="#fff"
                android:textColorHint="#aaaaaa"
                android:padding="12dp"/>

            <TextView
                android:id="@+id/forgotPasswordTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parola sıfırlama yardımı"
                android:textColor="#4ec9f7"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:clickable="true"/>
        </LinearLayout>

        <!-- Giriş Yap butonu -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Giriş Yap"
            android:textColor="#fff"
            android:backgroundTint="#1D6A31"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <!-- Oturumu açık tut (isteğe bağlı) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oturumumu açık tut. Detaylar"
            android:textColor="#cccccc"
            android:textSize="12sp"
            android:gravity="center"/>
    </LinearLayout>
</ScrollView>
