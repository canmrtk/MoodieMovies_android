<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ANA İÇERİK -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#191919">

        <!-- NAVBAR / TOOLBAR -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#23232a"
            android:elevation="4dp"
            app:title=""
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <!-- Ana içerik scroll edilebilsin diye -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <!-- SABİT POSTER -->
                <ImageView
                    android:id="@+id/posterImageView"
                    android:layout_width="220dp"
                    android:layout_height="320dp"
                    android:src="@drawable/godfather"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_edittext"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="18dp" />


                <!-- AÇIKLAMA YAZISI -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="İzlediğiniz filmleri takip edin.\nGörmek istediklerinizi kaydedin.\nArkadaşlarınıza neyin iyi olduğunu söyleyin."
                    android:textColor="#CCCCCC"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"/>

                <!-- SANA FİLM ÖNERİYİM Mİ BUTONU -->
                <Button
                    android:id="@+id/aiSuggestionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="SANA FİLM ÖNEREYİM Mİ?"
                    android:backgroundTint="#1D6A31"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp"/>

                <!-- EN SON BAKTIKLARIN BAŞLIĞI -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EN SON BAKTIKLARIN"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>

                <!-- FİLM KARTLARI: YATAY RECYCLERVIEW -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/filmsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="horizontal"
                    android:overScrollMode="never"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- DRAWER MENU -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        android:background="#23232a"/>
</androidx.drawerlayout.widget.DrawerLayout>
