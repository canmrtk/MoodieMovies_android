<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1F26"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/mmv_logo"
            android:contentDescription="Logo" />

        <!-- Uygulama Adı -->
        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="MODDIEMOVIES"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:fontFamily="@font/montserrat_bold" />

        <!-- Alt Açıklama -->
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="İzlediğiniz filmleri takip edin.\nGörmek istediklerinizi kaydedin.\nArkadaşlarınıza neyin iyi olduğunu söyleyin."
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:gravity="center"
            android:fontFamily="@font/inriaserif_italic" />

        <!-- Kullanım Şartları -->
        <TextView
            android:id="@+id/termsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Bir hesap oluşturarak Hizmet Şartları’nı kabul etmiş olursunuz. MoodieMovies’in gizlilik uygulamaları hakkında daha fazla bilgi için MoodieMovies Gizlilik Beyanı’na bakın. Size ara sıra hesapla ilgili e-postalar göndereceğiz."
            android:textColor="#888888"
            android:textSize="10sp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_regular" />

        <!-- Katıl Butonu -->
        <Button
            android:id="@+id/emailSignInButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="Kabul Et ve Katıl"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1D6A31"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_medium" />

        <!-- Facebook Butonu -->
        <Button
            android:id="@+id/facebookSignInButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_facebook"
            android:drawableStart="@drawable/ic_facebook"
            android:drawablePadding="12dp"
            android:paddingStart="24dp"
            android:text="Facebook ile Devam et"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat_medium"/>

        <!-- Google Butonu -->
        <Button
            android:id="@+id/googleSignInButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_google"
            android:drawableStart="@drawable/ic_google"
            android:drawablePadding="12dp"
            android:paddingStart="24dp"
            android:text="Google ile Devam et"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat_medium"/>

        <!-- Ya da çizgili -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#555555" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Ya da  "
                android:textColor="#AAAAAA"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#555555" />
        </LinearLayout>

        <!-- Oturum Aç -->
        <TextView
            android:id="@+id/signUpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Oturum Açın"
            android:textColor="#1D6A31"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_medium" />
    </LinearLayout>
</ScrollView>
