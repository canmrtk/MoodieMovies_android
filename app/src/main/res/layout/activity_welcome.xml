<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1F26"
    android:fillViewport="true"
    tools:context=".WelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/mmv_logo"
            android:contentDescription="Logo" />

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MODDIEMOVIES"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İzlediğiniz filmleri takip edin.\nGörmek istediklerinizi kaydedin.\nArkadaşlarınıza neyin iyi olduğunu söyleyin."
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:fontFamily="@font/inriaserif_italic"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/emailSignUpButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Kabul Et ve Katıl"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/button_background_green"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/facebookSignInButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text=" Facebook ile Devam et"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/ic_facebook"
            android:background="@drawable/button_background_white_outline"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserrat_regular"
            android:paddingStart="12dp" />

        <Button
            android:id="@+id/googleSignInButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text=" Google ile Devam et"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/ic_google"
            android:background="@drawable/button_background_white_outline"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_regular"
            android:paddingStart="12dp" />

        <TextView
            android:id="@+id/legalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bir hesap oluşturarak Hizmet Şartları’nı kabul etmiş olursunuz. MoodieMovies’in gizlilik uygulamaları hakkında daha fazla bilgi için MoodieMovies Gizlilik Beyanı’na bakın. Size ara sıra hesapla ilgili e-postalar göndereceğiz."
            android:textColor="#AAAAAA"
            android:textSize="11sp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/orText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="—  Ya da  —"
            android:textColor="#CCCCCC"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_medium" />

        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oturum Açın"
            android:textColor="#1D6A31"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
